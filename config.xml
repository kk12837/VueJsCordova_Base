<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hkep.chistvr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="app display name">project name</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="keith" href="https://website.com">
        about yourself
    </author>
    <content src="index.html" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="https://*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="*://*.website.com/*" />
    <access origin="*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <preference name="SplashScreen" value="screen" />
    <!-- <preference name="SplashScreenDelay" value="1500" /> -->
    <preference name="scheme" value="app" />
    <preference name="hostname" value="localhost" />

    <preference name="AndroidLaunchMode" value="singleInstance" />
    <universal-links>
        <host name="www.website.com" scheme="https">
          <path url="*" event="launchedAppFromLink" />
        </host>
    </universal-links>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="res/icon/android/mipmap-hdpi/ios.png" />
        <icon density="ldpi" src="res/icon/android/mipmap-mdpi/ios.png" />
        <icon density="mdpi" src="res/icon/android/mipmap-mdpi/ios.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/ios.png" />
        <splash density="port-hdpi" src="res/screen/android/480x800.png" />
        <splash density="port-ldpi" src="res/screen/android/200x320.png" />
        <splash density="port-mdpi" src="res/screen/android/320x480.png" />
        <splash density="port-xhdpi" src="res/screen/android/720x1280.png" />
        <splash density="port-xxhdpi" src="res/screen/android/960x1600.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/1280x1920.png" />
        <splash src="res/screen/android/800x480.png" density="land-hdpi" />
        <splash src="res/screen/android/320x200.png" density="land-ldpi" />
        <splash src="res/screen/android/480x320.png" density="land-mdpi" />
        <splash src="res/screen/android/1280x720.png" density="land-xhdpi" />
        <splash src="res/screen/android/1600x960.png" density="land-xxhdpi" />
        <splash src="res/screen/android/1920x1280.png" density="land-xxxhdpi" />

        <preference name="AndroidPersistentFileLocation" value="Internal" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="AndroidExtraFilesystems" value="files,cache, sdcard, cache-external, files-external" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="WKWebViewOnly" value="true" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        <plugin name="cordova-plugin-disable-ios11-statusbar" source="npm" spec="*" />
        <preference name="iosPersistentFileLocation" value="Library" />
        <preference name="iosPersistentFileLocation" value="Compatibility" />

        <icon src="res/icon/ios/1024.png" />
        <icon height="180" src="res/icon/ios/180.png" width="180" />
        <icon height="87" src="res/icon/ios/87.png" width="87" />
        <icon height="60" src="res/icon/ios/60.png" width="60" />
        <icon height="120" src="res/icon/ios/120.png" width="120" />
        <icon height="40" src="res/icon/ios/40.png" width="40" />
        <icon height="80" src="res/icon/ios/80.png" width="80" />
        <icon height="57" src="res/icon/ios/57.png" width="57" />
        <icon height="114" src="res/icon/ios/114.png" width="114" />
        <icon height="29" src="res/icon/ios/29.png" width="29" />
        <icon height="58" src="res/icon/ios/58.png" width="58" />

        <splash src="res/screen/ios/Default@2x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comcom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anycom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~anyany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~comany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~anycom.png" />
        <splash src="res/screen/ios/Default@2x~ipad~comcom.png" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <splash src="res/screen/ios/Default@2x~universal~anycom.png" />
        <splash src="res/screen/ios/Default@2x~universal~comany.png" />
        <splash src="res/screen/ios/Default@2x~universal~comcom.png" />
        <splash src="res/screen/ios/Default@3x~universal~anyany.png" />
        <splash src="res/screen/ios/Default@3x~universal~anycom.png" />
        <splash src="res/screen/ios/Default@3x~universal~comany.png" />

    </platform>
    <plugin name="cordova-plugin-nativestorage" spec="~2.3.2">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-file-opener2" spec="~3.0.3">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="~6.0.2">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-disable-ios11-statusbar" spec="~1.0.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-dialogs" spec="~2.0.2">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="~6.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.4" />

</widget>
